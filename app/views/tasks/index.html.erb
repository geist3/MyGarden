<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Short description</th>
    <th>From</th>
    <th>To</th>
    <th>Notes</th>
  </tr>

<% for task in @tasks %>
  <tr>
    <td><%=h task.short_description %></td>
    <td><%=h task.from %></td>
    <td><%=h task.to %></td>
    <td><%=h task.notes %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

