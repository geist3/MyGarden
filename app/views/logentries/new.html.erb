<h1>New logentry for <%= h @plant.name %></h1>

<% form_for([@plant, @logentry]) do |f| %>
  <%= f.error_messages %>

  <p>	
    <%= f.label :logdate %><br />
    <%= f.date_select :logdate %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>

  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>

